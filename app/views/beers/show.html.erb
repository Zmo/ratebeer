<p id="notice"><%= notice %></p>

<h1><%= @beer.name %></h1>

<p>
  <strong>Style:</strong>
  <%= @beer.style.name %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<% if @beer.ratings.empty? %>
  Beer has not yet been rated!
<% else %>
  Beer has <%= pluralize(@beer.ratings.size, "rating") %>, average <%= @beer.average_rating(@beer.ratings) %>
<% end %>
<br/>

<h4>give a rating:</h4>

<%= form_for(@rating) do |f| %>
  <%= f.hidden_field :beer_id %>
  score: <%= f.number_field :score %>
  <%= f.submit %>
<% end %>

<%= link_to 'Edit', edit_beer_path(@beer), :class => 'btn btn-primary' %>
<%= link_to 'Destroy', @beer, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' if current_user %>
